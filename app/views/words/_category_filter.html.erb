<%= form_tag words_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= select_tag "category_id",
        options_for_select(@categories.collect{|c| [c.title,c.id]},
        @category.id) %>
    </div>

    <div class="col-md-3">
      <%= submit_tag "Filter", class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <% {learned_words: "Learned", not_learned_words: "Not Learned", all: "All"}
        .each do |value, label| %>
        <div class="col-md-1">
          <%= radio_button_tag :filter, value, value.to_s == @filter %>
        </div>

        <div class="col-md-3">
          <%= label_tag "filter_#{value}", label %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
