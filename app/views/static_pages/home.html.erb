<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for current_user %>
          <%= current_user.name %>
        </h1>
      </section>

      <section>
        <strong>
          Learned <%= pluralize learned_words_amount(current_user), "Word" %>
        </strong>
      </section>

      <section>
        <%= render 'shared/stat' %>
      </section>
    </aside>
    <div class="col-md-8">
      <section>
        <%= link_to "Word", words_path, class: "btn btn-lg btn-primary" %>
        <%= link_to "Lesson", categories_path, class: "btn btn-lg btn-primary" %>
      </section>

      <div class="activity">
        <%= render @feed_items %>
        <%= will_paginate @feed_items %>
      </div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Framgia E-Learning System</h1>

    <h2>
      This is the home page for the
      Framgia E-Learning System
    </h2>

    <%= link_to "Signup", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
